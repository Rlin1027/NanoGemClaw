{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "@nanogemclaw/core": ["../core/src/index.ts"],
      "@nanogemclaw/core/*": ["../core/src/*.ts"],
      "@nanogemclaw/db": ["../db/src/index.ts"],
      "@nanogemclaw/db/*": ["../db/src/*.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
