# NanoGemClaw Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# REQUIRED
# ==============================================================================

# Telegram Bot Token (Required)
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Gemini API Key (Required for image generation and STT fallback)
# Get from https://aistudio.google.com/
GEMINI_API_KEY=

# ==============================================================================
# DASHBOARD
# ==============================================================================

# API key for dashboard backend access
DASHBOARD_API_KEY=

# Access code for dashboard login screen (shown to browser users)
DASHBOARD_ACCESS_CODE=

# Dashboard server bind host (default: 127.0.0.1 â€” loopback only)
# Set to 0.0.0.0 to expose on all interfaces (use behind a reverse proxy)
DASHBOARD_HOST=127.0.0.1

# Allowed CORS origins for dashboard (comma-separated)
# Example: http://localhost:5173,https://dashboard.example.com
DASHBOARD_ORIGINS=http://localhost:5173

# ==============================================================================
# ASSISTANT
# ==============================================================================

# Assistant name used to trigger responses (e.g. @Andy in group chats)
ASSISTANT_NAME=Andy

# Gemini model to use (default: gemini-3-flash-preview)
# Options: gemini-3-flash-preview, gemini-3-pro-preview
GEMINI_MODEL=gemini-3-flash-preview

# ==============================================================================
# SPEECH-TO-TEXT
# ==============================================================================

# STT provider: 'gemini' (default, free, multimodal) or 'gcp' (paid, dedicated API)
STT_PROVIDER=gemini

# Google Cloud credentials (required if STT_PROVIDER=gcp)
GOOGLE_APPLICATION_CREDENTIALS=

# ==============================================================================
# FAST PATH (Direct Gemini API)
# ==============================================================================

# Enable fast path for simple text queries (bypasses container startup)
# Default: true
FAST_PATH_ENABLED=true

# Context cache TTL in seconds (default: 21600 = 6 hours)
CACHE_TTL_SECONDS=21600

# Minimum content length to enable caching (default: 100000 chars)
MIN_CACHE_CHARS=100000

# Fast path API call timeout in ms (default: 180000 = 3 minutes)
FAST_PATH_TIMEOUT_MS=180000

# ==============================================================================
# CONTAINER EXECUTION
# ==============================================================================

# Container image to use for agent execution
CONTAINER_IMAGE=nanogemclaw-agent:latest

# Container execution timeout in ms (default: 300000 = 5 minutes)
CONTAINER_TIMEOUT=300000

# Maximum container output size in bytes (default: 10485760 = 10MB)
CONTAINER_MAX_OUTPUT_SIZE=10485760

# ==============================================================================
# RATE LIMITING
# ==============================================================================

# Enable rate limiting (default: true)
RATE_LIMIT_ENABLED=true

# Maximum requests per window per group/user (default: 20)
RATE_LIMIT_MAX=20

# Rate limit window duration in minutes (default: 5)
RATE_LIMIT_WINDOW=5

# ==============================================================================
# HEALTH CHECK
# ==============================================================================

# Enable health check HTTP server on /health (default: true)
HEALTH_CHECK_ENABLED=true

# Health check server port (default: 8080)
HEALTH_CHECK_PORT=8080

# ==============================================================================
# WEBHOOKS & ALERTS
# ==============================================================================

# External webhook URL for notifications (Slack/Discord/IFTTT)
WEBHOOK_URL=

# Events that trigger webhook: error, alert, system (comma-separated)
WEBHOOK_EVENTS=error,alert

# Enable error alerts to main group (default: true)
ALERTS_ENABLED=true

# ==============================================================================
# TIMEZONE
# ==============================================================================

# Timezone for scheduled tasks (default: system timezone)
# Examples: Asia/Taipei, America/New_York, Europe/London
TZ=
